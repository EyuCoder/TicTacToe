<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ivClicks"
            type="com.codexo.tictactoe.screens.single.SinglePlayerFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.single.SinglePlayerFragment">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="106dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">

        </LinearLayout>

        <GridLayout
            android:id="@+id/grid_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:columnCount="3"
            android:gravity="center"
            android:rowCount="3"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <ImageView
                android:id="@+id/tv_1"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:layout_margin="@dimen/margin_cells"
                android:background="@drawable/cells_border"
                android:contentDescription="@string/_01"
                android:padding="@dimen/cells_padding" />

            <ImageView
                android:id="@+id/tv_2"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:layout_margin="@dimen/margin_cells"
                android:background="@drawable/cells_border"
                android:contentDescription="@string/_01"
                android:padding="@dimen/cells_padding" />

            <ImageView
                android:id="@+id/tv_3"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:layout_margin="@dimen/margin_cells"
                android:background="@drawable/cells_border"
                android:contentDescription="@string/_01"
                android:padding="@dimen/cells_padding" />
            <ImageView
                android:id="@+id/tv_4"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:layout_margin="@dimen/margin_cells"
                android:background="@drawable/cells_border"
                android:contentDescription="@string/_01"
                android:padding="@dimen/cells_padding" />

            <ImageView
                android:id="@+id/tv_5"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:layout_margin="@dimen/margin_cells"
                android:background="@drawable/cells_border"
                android:contentDescription="@string/_01"
                android:padding="@dimen/cells_padding" />

            <ImageView
                android:id="@+id/tv_6"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:layout_margin="@dimen/margin_cells"
                android:background="@drawable/cells_border"
                android:contentDescription="@string/_01"
                android:padding="@dimen/cells_padding" />

            <ImageView
                android:id="@+id/tv_7"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:layout_margin="@dimen/margin_cells"
                android:background="@drawable/cells_border"
                android:contentDescription="@string/_01"
                android:padding="@dimen/cells_padding" />
            <ImageView
                android:id="@+id/tv_8"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:layout_margin="@dimen/margin_cells"
                android:background="@drawable/cells_border"
                android:contentDescription="@string/_01"
                android:padding="@dimen/cells_padding" />

            <ImageView
                android:id="@+id/tv_9"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:layout_margin="@dimen/margin_cells"
                android:background="@drawable/cells_border"
                android:contentDescription="@string/_01"
                android:padding="@dimen/cells_padding" />


        </GridLayout>

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play_again"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/grid_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>